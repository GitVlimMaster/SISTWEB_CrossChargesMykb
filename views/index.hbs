<!-- content-primary -->
<div class="content-primary">
    <!-- Nav -->
    <nav class="index-nav">
        <div class="content-nav row">
            <div class="col-10">
                <div class="img a-intro" data-toggle="tooltip" data-placement="top" title="Esta es la sesión activa">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcTm-XHUfj2MRkB7bSAt7FLMA0sv_E23AIMB1oDZuQtM7RngWp7R" alt="">
                    <div class="user-name">
                        {{logeddUser.ti_name}}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <div class="icon a-intro">
                    <a href="/logout" class="close-session">
                        <i class="material-icons-outlined">power_settings_new</i>
                    </a>
                </div>
            </div>
        </div>
    </nav>
    <!-- / Nav -->
    <!-- content-form -->
    <div class="content-form">
        <p class="weigth-300 a-intro"><span class="weigth-400">Selecciona</span> el Hotel y el número de habitación en donde se encuentra el Huésped.</p>
        <form class="block-submit">
            <div class="text-center">
                <span class="badge a-intro w-100 badge-pill badge-warning p-2 pl-3 pr-3">Hotel asignado: {{hotelInformation.hotelsData.name}}</span>
            </div>
            <div class="input-index select row a-intro">
                <div class="col-3 col-md-3 v-wrapper">
                    <label class="material-icons-outlined" style="margin-bottom: 0">room_service</label>
                </div>
                <select data-show-content="true" id="select_hotel" class="col-9 col-md-9 selectPicker border">
                    <option value="0">-- Selecciona un hotel --</option>
                    {{#each catHotels as | hotel |}}
                        <option value="{{hotel.id_hotel}}">{{hotel.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="input-index number row a-intro" id="search_by_numberroom">
                <div class="col-3 col-md-3 v-wrapper">
                    <label for="select_hotel" class="material-icons-outlined" style="margin-bottom: 0">hotel</label>
                </div>
                <div class="col-9 col-md-9">
                    <input type="number" name="number" max="99999" placeholder="Numero de habitación." id="room">
                </div>
            </div>
            <div class="input-index number row a-intro" style="display: none;" id="search_by_lastname">
                <div class="col-3 col-md-3 v-wrapper">
                    <label for="select_hotel" class="material-icons-outlined" style="margin-bottom: 0">badge</label>
                </div>
                <div class="col-9 col-md-9">
                    <input type="text" name="nameorlastname" placeholder="Nombre o Apellido" id="nameorlastname">
                </div>
            </div>
            <div class="form-group form-check m-auto" style="width: fit-content;" id="not-fairmont">
                <input type="checkbox" class="form-check-input" id="search_lastname">
                <label class="form-check-label helper-text" for="search_lastname">Buscar por nombre o apellido</label>
            </div>
            <p class="helper-text a-intro mt-3" style="font-size: 14px !important;">Da clic en la parte de abajo para Buscar Huésped</p>
            <div class="text-center mt-3">
                <button type="button" class="btn weight-500 w-100 a-intro rounded-20 open-guest-modal btn-primary p-2 purple-btn" style="font-size: 23px !important;">
                    <span class="text">Buscar Huésped</span>
                </button>
            </div>
        </form>
    </div>
    <!-- content-form -->
</div>
<!-- / content-primary -->

<div id="div-background"></div>

<div class="float-actions">
    <div class="item">
        <button type="button" class="a-intro btn btn-outline-dark btn-circle" data-toggle="modal" data-target="#exampleModalCenter">
            <i class="material-icons">help_outline</i>
        </button>
    </div>
    <div class="item">
        <div class="vp-width">
            <div class="h-100 bg-white shadow-2 p-3">
                <div class="table-responsive" style="max-height: 100%;">
                    <table class="w-100 table table-striped" id="tableCharges">
                        <thead>
                            <tr>
                                <th>Atendio</th>
                                <th>Hotel</th>
                                <th>Room</th>
                                <th>Huésped</th>
                                <th>Cargo</th>
                                <th>Estatus</th>
                                <th>Fecha</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyCharges">
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="arrow">
                <div></div>
            </div>
        </div>
        <div class="btn a-intro" id="notifications">
            <i class="material-icons" style="font-size: 38px;">expand_less</i>
        </div>
        <div class="btn d-none" id="notifications2">
            <i class="material-icons" style="font-size: 38px;">expand_more</i>
        </div>
    </div>
    <div class="item">
        <a href="/ticket" class="a-intro btn btn-outline-dark btn-circle">
            <i class="material-icons">bookmark_add</i>
        </a>
    </div>
</div>

